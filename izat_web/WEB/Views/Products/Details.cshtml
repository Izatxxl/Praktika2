@model Domain.Entities.Product

@{
    ViewData["Title"] = "Детали продукта";
}

<h2>@ViewData["Title"]</h2>

<dl class="row">
    <dt class="col-sm-2">Название</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Категория</dt>
    <dd class="col-sm-10">@Model.Category</dd>

    <dt class="col-sm-2">Материал</dt>
    <dd class="col-sm-10">@Model.Material</dd>

    <dt class="col-sm-2">Вставка</dt>
    <dd class="col-sm-10">@Model.Insertion</dd>

    <dt class="col-sm-2">Вес</dt>
    <dd class="col-sm-10">@Model.Weight</dd>

    <dt class="col-sm-2">Цена</dt>
    <dd class="col-sm-10">@Model.Price</dd>

    <dt class="col-sm-2">Остаток</dt>
    <dd class="col-sm-10">@Model.StockQuantity</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редактировать</a>
<a asp-action="Index" class="btn btn-secondary">Назад</a>
